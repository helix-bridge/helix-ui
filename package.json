{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "yarn install; lerna bootstrap;",
    "start": "lerna run start --parallel",
    "start:helix": "node_modules/.bin/lerna run --scope helix --stream dev",
    "start:apps": "node_modules/.bin/lerna run --scope apps --stream dev",
    "build:helix": "node_modules/.bin/lerna run --scope helix --stream build",
    "build:apps": "node_modules/.bin/lerna run --scope apps --stream build",
    "run:build:helix": "lerna run start --scope helix",
    "run:build:apps": "lerna run start --scope apps",
    "stylelint": "stylelint \"packages/**/styles/**/*.scss\" --config stylelint.config.js",
    "eslint": "eslint packages/**/*.{ts,tsx} -c .eslintrc.js --fix",
    "lint": "npm run eslint && npm run stylelint && cd packages/helix && next lint",
    "format": "prettier  packages/shared/**/**/*.{ts,tsx} packages/helix/**/**/*.{ts,tsx} packages/apps/**/**/*.{ts,tsx} --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-angular": "^12.1.4",
    "@commitlint/config-conventional": "^12.0.1",
    "lerna": "^4.0.0",
    "husky": "^7.0.4",
    "circular-dependency-plugin": "^5.2.2",
    "eslint": "7.27.0",
    "prettier": "^2.6.2",
    "eslint-config-next": "12.1.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.1.2",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "@types/bn.js": "^5.1.0",
    "@types/lodash": "^4.14.181",
    "@types/node": "17.0.23",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/store": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-prettier": "^1.2.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/babel-loader"
    ]
  }
}
