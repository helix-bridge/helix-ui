{
  "name": "helix-ui",
  "description": "Helix Bridge UI",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode mainnet",
    "dev:testnet": "vite --mode testnet",
    "build": "tsc && vite build --mode mainnet",
    "build:testnet": "tsc && vite build --mode testnet",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier 'src/**/*.{js,jsx,ts,tsx,json}' --write",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helix-bridge/helix-ui.git"
  },
  "keywords": [
    "helix",
    "helix-ui",
    "helixbridge"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/helix-bridge/helix-ui/issues"
  },
  "homepage": "https://github.com/helix-bridge/helix-ui#readme",
  "dependencies": {
    "@apollo/client": "^3.10.3",
    "@rainbow-me/rainbowkit": "^1.3.7",
    "graphql": "^16.8.1",
    "localforage": "^1.10.0",
    "match-sorter": "^6.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "sort-by": "^0.0.2",
    "viem": "^1.21.4",
    "wagmi": "^1.4.13"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
